# Barrana.ai School Management System - Production Environment

# Server Configuration
NODE_ENV=production
PORT=5001
HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/barrana-ai-production
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/barrana-ai-production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Gmail Example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AI Services Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Google Cloud Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=./google-credentials.json

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=barrana-ai-uploads
AWS_S3_FOLDER=uploads

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
SLOW_DOWN_DELAY_AFTER=5
SLOW_DOWN_DELAY_MS=500

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration
MONITORING_ENABLED=true
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Barrana AI School Management

# Feature Flags
FEATURE_VOICE_RECORDING=true
FEATURE_AI_REPORTS=true
FEATURE_REALTIME=true
FEATURE_ANALYTICS=true
FEATURE_EMAIL=true
FEATURE_FILE_UPLOAD=true

# Business Configuration
SCHOOL_NAME=Barrana.ai School
SUPPORT_EMAIL=support@barrana.ai
ADMIN_EMAIL=admin@barrana.ai
MAX_STUDENTS_PER_SCHOOL=1000
MAX_TEACHERS_PER_SCHOOL=100
MAX_REPORTS_PER_MONTH=10000 