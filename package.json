{
  "name": "barrana-ai-school-management",
  "version": "1.0.0",
  "description": "AI-powered School Management System by Barrana.ai",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:production": "GENERATE_SOURCEMAP=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prebuild": "npm run type-check && npm run lint",
    "postbuild": "echo 'Build completed successfully!'",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "deploy:staging": "npm run build:production && echo 'Deploying to staging...'",
    "deploy:production": "npm run build:production && echo 'Deploying to production...'",
    "start:production": "serve -s build -l 3000",
    "docker:build": "docker build -t barrana-ai-school-management .",
    "docker:run": "docker run -p 3000:3000 barrana-ai-school-management",
    "docker:deploy": "npm run docker:build && npm run docker:run"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barrana-ai/school-management-system.git"
  },
  "keywords": [
    "education",
    "ai",
    "school-management",
    "react",
    "typescript",
    "material-ui",
    "voice-recognition",
    "progress-reports"
  ],
  "author": "Barrana.ai Team",
  "license": "MIT",
  "homepage": "https://barrana.ai"
} 